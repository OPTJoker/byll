{
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.vue",
      "tests/**/*.ts",
      "tests/**/*.tsx",
    ],
    "exclude": [
      "node_modules"
    ],
     "compilerOptions": {
        "noImplicitAny": false,
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "plugins": [{ "name": "@vuedx/typescript-plugin-vue" }],
        "allowSyntheticDefaultImports": true, // 允许引入没有默认导出的模块
        "removeComments": true,
        "preserveConstEnums": true,
        "baseUrl": ".",
        "types": [
          "webpack-env"
        ],
        "paths": {
          "@/*": [
            "src/*"
          ]
        }
      }
 }